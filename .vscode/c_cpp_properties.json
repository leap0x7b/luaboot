{
    "configurations": [
        {
            "name": "UEFI",
            "includePath": [
                "${workspaceFolder}/include",
                "${workspaceFolder}/external",
                "${workspaceFolder}/external/limine-efi/inc",
            ],
            "compilerPath": "clang",
            "cStandard": "gnu2x",
            "cppStandard": "gnu++20",
            "intelliSenseMode": "windows-clang-x64",
            "mergeConfigurations": false,
            "browse": {
                "path": [
                    "${workspaceFolder}/**"
                ],
                "limitSymbolsToIncludedHeaders": true
            },
            "compilerArgs": [
                "--target",
                "x86_64-uefi-windows-msvc",
                "-nostdlib",
                "-ffreestanding",
                "-fshort-wchar"
            ],
            "configurationProvider": "ms-vscode.makefile-tools"
        }
    ],
    "version": 4
}